{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "noUnusedLocals": true,
    "paths": {
      "react": [ "./node_modules/@types/react" ],
      "@console/app/*": ["packages/console-app/*"],
      "@console/shared/*": ["packages/console-shared/*"],
      "@console/internal/*": ["public/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
